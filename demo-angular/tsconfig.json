{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "*": ["./node_modules/*"]
    },
    "moduleResolution": "node",
    "removeComments": false
  },
  "exclude": ["node_modules", "platforms", "../src/node_modules"],
  "include": ["../src", "**/*"]
}
